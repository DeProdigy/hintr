<% if !current_user %>

  <a href="/auth/facebook" class="btn btn-sm btn-social-facebook" id="sign_in">
          <i class="fui-facebook"></i>
          Connect with Facebook
  </a>

<%# elsif !current_user.interested_in %>

  Ask for what user is interested in

<%# elsif !current_user.watched_intro %>

  Play video

<% else %>

  <!-- nav bar -->
  <div class="navbar navbar-inverse">
    <div class="navbar-inner">
      <div class="container">
        <a href="/" class="navbar-brand">hintr</a>
        Signed in as <strong><%= current_user.name %></strong>
        <%= link_to "Sign out", signout_path, id: "sign_out" %>
      </div>
    </div>
  </div>

  <script>

      function findHints() {
        return $.ajax({
          url: "/users/<%= current_user.id %>/load_hints",
          type: 'post'
        });
      }

      function showHints() {
        return $.ajax({
          url: "/users/<%= current_user.id %>/matches",
          type: 'get'
        });
      }

      $('#load-hints').on('click', function() {
      findHints().done(function(data) {
        console.log(data);
      });
      $(this).off();
    });

    $('#show-hints').on('click', function() {
      showHints().done(function(data) {
        for (i=0;i<data.length;i++) {
          $matchDiv = $('<div>');
          $matchDiv.addClass('match');
          $matchPic = $('<img>');
          $matchPic.attr('src', data[i]['profile_picture']);
          $matchDiv.append($matchPic);
          $('body').append($matchDiv);
        }
      });
      $(this).off();
    });

  </script>

<% end %>
